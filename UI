import tkinter as tk
from tkinter import Label, Entry, Button
import subprocess

def execute_scripts():
    # Get values from the user interface
    param1_value = param1_entry.get()
    param2_value = param2_entry.get()

    # Execute the first script
    subprocess.run(["python", "first_script.py", param1_value, param2_value], check=True)

    # Execute the second script
    subprocess.run(["python", "second_script.py", param1_value, param2_value], check=True)

# Create the main window
root = tk.Tk()
root.title("Script Execution Tool")

# Add input fields and labels
Label(root, text="Parameter 1:").grid(row=0, column=0)
param1_entry = Entry(root)
param1_entry.grid(row=0, column=1)

Label(root, text="Parameter 2:").grid(row=1, column=0)
param2_entry = Entry(root)
param2_entry.grid(row=1, column=1)

# Add a button to trigger the script execution
submit_button = Button(root, text="Submit", command=execute_scripts)
submit_button.grid(row=2, column=0, columnspan=2)

# Start the GUI
root.mainloop()
